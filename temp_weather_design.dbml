  MinHumidity decimal(5,2) [note: 'Weekly minimum humidity']
  MaxHumidity decimal(5,2) [note: 'Weekly maximum humidity']
  TotalPrecipitation decimal(6,2) [note: 'Total weekly precipitation in mm']
  MeanWindSpeed decimal(5,2) [note: 'Weekly average wind speed']
  MaxWindSpeed decimal(5,2) [note: 'Weekly maximum wind speed']
  PredominantWindDirection varchar(10) [note: 'Most common wind direction in week']
  MeanBarometricPressure decimal(6,2) [note: 'Weekly average barometric pressure']
