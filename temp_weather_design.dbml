  MeanAirTemp decimal(5,2) [note: 'Weekly average air temperature']
  MinAirTemp decimal(5,2) [note: 'Weekly minimum air temperature']
  MaxAirTemp decimal(5,2) [note: 'Weekly maximum air temperature']
  StdDevAirTemp decimal(5,2) [note: 'Standard deviation of air temperatures in week']
