// Analysis Tables

Table TemperatureGradientWeekly {
  GradientID bigint [pk, increment, note: 'Unique identifier for the gradient record']
  Timestamp timestamp [not null, note: 'Start of week (Monday)']
  AsphaltMeanTemp decimal(5,2) [note: 'Weekly average temperature in asphalt layer']
  BaseMeanTemp decimal(5,2) [note: 'Weekly average temperature in base layer']
  SubbaseMeanTemp decimal(5,2) [note: 'Weekly average temperature in subbase layer']
  SubgradeMeanTemp decimal(5,2) [note: 'Weekly average temperature in subgrade layer']
  AsphaltToBaseGradient decimal(6,3) [note: 'Temperature gradient between asphalt and base in °C/m']
  BaseToSubbaseGradient decimal(6,3) [note: 'Temperature gradient between base and subbase in °C/m']
  SubbaseToSubgradeGradient decimal(6,3) [note: 'Temperature gradient between subbase and subgrade in °C/m']
  SurfaceToBottomGradient decimal(6,3) [note: 'Temperature gradient between surface and bottom in °C/m']
  MaxDailyGradient decimal(6,3) [note: 'Maximum daily gradient observed during week']
  MaxGradientTimestamp timestamp [note: 'When maximum gradient occurred']
  DiurnalVariationSurface decimal(5,2) [note: 'Average day/night temperature difference at surface']
  DiurnalVariationBase decimal(5,2) [note: 'Average day/night temperature difference at base']
  IntervalEnd timestamp [not null, note: 'End of week (Sunday)']
  ProcessedAt timestamp [default: 'CURRENT_TIMESTAMP', note: 'When analysis was performed']

  indexes {
    Timestamp [unique, name: 'idx_tempgradient_timestamp']
  }
}

// System Tables

Table SystemStatus {
  StatusID integer [pk, increment, note: 'Unique identifier for status entry']
  StatusType varchar(50) [not null, note: 'Type of processing job']
  LastRunTimestamp timestamp [note: 'When the process last ran']
  LastProcessedTimestamp timestamp [note: 'Last data point that was processed']
  Status varchar(20) [note: 'SUCCESS, FAILED, RUNNING']
  Message text [note: 'Details about the status']
  UpdatedAt timestamp [default: 'CURRENT_TIMESTAMP', note: 'When this record was updated']

  indexes {
    StatusType [unique, name: 'idx_status_type']
  }
}

Table ArchiveInfo {
  ArchiveID integer [pk, increment, note: 'Unique identifier for the archive']
  IntervalStart timestamp [not null, note: 'Start of archived period']
  IntervalEnd timestamp [not null, note: 'End of archived period']
  ArchiveDate timestamp [not null, note: 'When the archive was created']
  ArchiveFilePath varchar(255) [not null, note: 'Path to the ZIP archive file']
  FileSize bigint [note: 'Size in bytes']
  ArchiveStatus varchar(20) [default: 'COMPLETED', note: 'COMPLETED, FAILED, PARTIAL']
  Notes text [note: 'Additional information']
  CreatedAt timestamp [default: 'CURRENT_TIMESTAMP']

  indexes {
    (IntervalStart, IntervalEnd) [name: 'idx_archive_interval']
  }
}

Table SensorHealthMonitoring {
  HealthID bigint [pk, increment, note: 'Unique identifier for the health record']
  Timestamp timestamp [not null, note: 'Day of health check']
  SensorID varchar(20) [not null, note: 'Reference to the sensor']
  DataCaptureRate decimal(5,2) [note: 'Percentage of expected readings received']
  NoiseLevel decimal(5,2) [note: 'Measure of signal noise']
  AnomalyCount integer [note: 'Number of anomalous readings']
  BatteryLevel decimal(5,2) [note: 'If applicable']
  SignalStrength decimal(5,2) [note: 'If applicable']
  FailureFlags integer [note: 'Bit flags for various failure modes']
  HealthStatus varchar(20) [note: 'GOOD, WARNING, CRITICAL, OFFLINE']
  Notes text [note: 'Additional details about sensor health']
  ProcessedAt timestamp [default: 'CURRENT_TIMESTAMP', note: 'When health check was performed']

  indexes {
    Timestamp [name: 'idx_sensorhealth_timestamp']
    (SensorID, Timestamp) [name: 'idx_sensorhealth_sensor_time']
    HealthStatus [name: 'idx_sensorhealth_status']
    (Timestamp, SensorID) [unique, name: 'uq_sensorhealth_time_sensor']
  }
}

// Relationships

Ref: RawTemperatureData.SensorID > SensorInformation.SensorID
Ref: StrainData.SensorID > SensorInformation.SensorID
Ref: PressureData.SensorID > SensorInformation.SensorID
Ref: MoistureData.SensorID > SensorInformation.SensorID

Ref: TempData15Min.SensorID > SensorInformation.SensorID
Ref: TempDataHourly.SensorID > SensorInformation.SensorID
Ref: TempDataDaily.SensorID > SensorInformation.SensorID
Ref: TempDataWeekly.SensorID > SensorInformation.SensorID

Ref: SensorHealthMonitoring.SensorID > SensorInformation.SensorID